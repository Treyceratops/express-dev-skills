<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Cats</title>
</head>

<body>
    <h1>Cats as of <%= time %>
    </h1>

    <ul>
        <% cats.forEach(function(c) { %>
            <li>
                <a href="/cats/<%= c.id %>">
                    <%= c.cat %>
                </a>
                -
                <%= c.cute ? 'cute' : 'not cute' %>
                    <form action="/cats/<%= c.id %>?_method=DELETE" class="delete-form" method="POST">
                        <button type="submit">X</button>
                    </form>
            </li>
            <% }); %>
    </ul>
    <a href="/cats/new">Add Cat</a>
    <a href="/">Homepage</a>
</body>

</html>